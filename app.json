{
  "expo": {
    "name": "robopits-app",
    "slug": "robopits-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo-robopits.png",
    "userInterfaceStyle": "light",
    "scheme": "RoboPits",
    "splash": {
      "image": "./assets/logo-robopits.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font"
    ]
  }
}
